{
  "name": "FantaAI",
  "version": "1.0.0",
  "description": "Fantacalcio AI - Gestione squadre Serie A 2025/26",
  "author": "Francesco Negretti",
  "homepage": "https://github.com/francecesco/FantaAI",
  "category": "Sports",
  "tags": ["fantacalcio", "serie-a", "football", "sports", "ai"],
  "icon": "https://raw.githubusercontent.com/francecesco/FantaAI/main/assets/icon.png",
  "screenshots": [
    "https://raw.githubusercontent.com/francecesco/FantaAI/main/assets/screenshot1.png",
    "https://raw.githubusercontent.com/francecesco/FantaAI/main/assets/screenshot2.png"
  ],
  "requirements": {
    "cpu": "1",
    "memory": "512",
    "storage": "1024"
  },
  "ports": [
    {
      "name": "HTTP",
      "port": 3000,
      "protocol": "http",
      "description": "Accesso all'applicazione FantaAI"
    }
  ],
  "volumes": [
    {
      "name": "postgres_data",
      "path": "/var/lib/postgresql/data",
      "description": "Dati persistenti del database PostgreSQL"
    }
  ],
  "environment": [
    {
      "name": "POSTGRES_HOST",
      "value": "postgres",
      "description": "Host del database PostgreSQL"
    },
    {
      "name": "POSTGRES_PORT",
      "value": "5432",
      "description": "Porta del database PostgreSQL"
    },
    {
      "name": "POSTGRES_USER",
      "value": "postgres",
      "description": "Utente del database PostgreSQL"
    },
    {
      "name": "POSTGRES_PASSWORD",
      "value": "postgres",
      "description": "Password del database PostgreSQL"
    },
    {
      "name": "POSTGRES_DB",
      "value": "fantaseriea",
      "description": "Nome del database PostgreSQL"
    },
    {
      "name": "DATABASE_URL",
      "value": "postgresql://postgres:postgres@postgres:5432/fantaseriea",
      "description": "URL di connessione al database"
    },
    {
      "name": "SESSION_SECRET",
      "value": "your-super-secret-session-key-change-this-in-production",
      "description": "Chiave segreta per le sessioni"
    },
    {
      "name": "NODE_ENV",
      "value": "production",
      "description": "Ambiente di esecuzione Node.js"
    }
  ],
  "services": [
    {
      "name": "postgres",
      "image": "postgres:15-alpine",
      "container_name": "fantai-postgres",
      "environment": {
        "POSTGRES_DB": "fantaseriea",
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "postgres"
      },
      "volumes": [
        "postgres_data:/var/lib/postgresql/data"
      ],
      "networks": [
        "fantai_network"
      ],
      "restart": "unless-stopped",
      "healthcheck": {
        "test": ["CMD-SHELL", "pg_isready -U postgres"],
        "interval": "30s",
        "timeout": "10s",
        "retries": 3
      }
    },
    {
      "name": "fantai",
      "build": ".",
      "container_name": "fantai-app",
      "environment": {
        "POSTGRES_HOST": "postgres",
        "POSTGRES_PORT": "5432",
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "postgres",
        "POSTGRES_DB": "fantaseriea",
        "DATABASE_URL": "postgresql://postgres:postgres@postgres:5432/fantaseriea",
        "SESSION_SECRET": "your-super-secret-session-key-change-this-in-production",
        "NODE_ENV": "production"
      },
      "ports": [
        "3000:5000"
      ],
      "depends_on": [
        "postgres"
      ],
      "networks": [
        "fantai_network"
      ],
      "restart": "unless-stopped",
      "healthcheck": {
        "test": ["CMD", "curl", "-f", "http://localhost:5000/api/health"],
        "interval": "30s",
        "timeout": "10s",
        "retries": 3,
        "start_period": "60s"
      }
    }
  ],
  "volumes": {
    "postgres_data": {
      "driver": "local"
    }
  },
  "networks": {
    "fantai_network": {
      "driver": "bridge"
    }
  }
}
